<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:id="@+id/eventCard"
        app:cardElevation="1dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="6">
                <ImageView
                    android:paddingTop="24dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="0dp"
                    android:contentDescription="Logo/Poster"
                    android:id="@+id/event_image"
                    android:layout_weight="1.3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher" />

                <RelativeLayout
                    android:layout_weight="4.7"
                    android:layout_width="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_height="match_parent">



                    <TextView
                        android:id="@+id/event_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/date"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:textSize="32sp"
                        tools:text="Event Name" />

                    <WebView
                        android:id="@+id/creativity_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/event_name"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="5dp"
                        android:textSize="14sp"
                         />

                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/venue"
                android:background="#ececec"/>
            <LinearLayout
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:gravity="start"
                    android:id="@+id/Appreciated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="16dp">
                    <ImageView
                        android:contentDescription="notheart"
                        android:id="@+id/Appreciated_image"
                        android:layout_gravity="center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/notheart" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="4dp"
                        android:textColor="#ff007e"
                        android:text="Appreciated" />

                </LinearLayout>




            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</ScrollView>
