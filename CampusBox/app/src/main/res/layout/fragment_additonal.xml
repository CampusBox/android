<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:TagsEditText="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/static_venue_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Venue *"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_venue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/static_venue_desc"
                android:hint="Where will the event take place"
                android:maxLength="100"
                android:padding="8dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/counter_venue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/input_venue"
                android:layout_marginEnd="8dp"
                android:text="0/100"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/static_link_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Link to the event"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/static_link_desc"
                android:hint="http://"
                android:padding="8dp"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/static_tag_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Set tags for your event"
                android:textSize="16sp" />

            <mabbas007.tagsedittext.TagsEditText
                android:id="@+id/input_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/static_tag_desc"
                android:hint="Press enter to add new tag"
                TagsEditText:allowSpaceInTag="true"
                TagsEditText:tagsCloseImageRight="@drawable/tag_close"
                TagsEditText:tagsBackground="@drawable/background_tag"
                TagsEditText:tagsTextColor="#fff"
                TagsEditText:tagsTextSize="20sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/static_name_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Organizer *"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/static_name_desc"
                android:hint="Society or entity holding the event"
                android:maxLength="80"
                android:padding="8dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/counter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@id/input_name"
                android:layout_marginEnd="8dp"
                android:text="0/80"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/static_phone_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Organiser phone *"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/static_phone_desc"
                android:hint="9646261622"
                android:maxLength="10"
                android:padding="8dp"
                android:inputType="number"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/static_link_organiser_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Link to the organizer"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_link_organiser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/static_link_organiser_desc"
                android:hint="https://"
                android:padding="8dp"
                android:textSize="20sp" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>