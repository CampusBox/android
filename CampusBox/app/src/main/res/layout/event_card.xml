<?xml version="1.0" encoding="utf-8"?>
 <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <ImageView

            android:layout_centerVertical="true"
            android:id="@+id/event_image"
            android:layout_weight="1"
            android:background="@color/imageBackgroundEvent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                tools:text="date" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:gravity="center"
                android:paddingStart="32dp"
                android:textSize="40sp"
                tools:text="Event Name" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="8dp"
                android:paddingEnd="16dp"
                android:paddingStart="32dp"
                android:textSize="24sp"

                tools:text="ClashHacks is one of the biggest student-run hackathon, covering both software and hardware." />
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 tools:text="Venue"
                 android:gravity="center"
                 android:id="@+id/venue"
                 android:textSize="24sp"

                 android:layout_below="@+id/desc"
                 android:layout_marginLeft="32dp"
                 android:layout_marginTop="16dp"/>
            <LinearLayout
                android:id="@+id/Appreciated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/venue"
                android:paddingBottom="8dp"
                android:paddingStart="32dp"
                android:paddingTop="16dp">

                <ImageView
                    android:id="@+id/Appreciated_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/facebook" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:text="Appreciated" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Attending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/venue"
                android:layout_toEndOf="@+id/Appreciated"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingTop="16dp">

                <ImageView
                    android:id="@+id/Attending_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/facebook" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:text="Attending" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

 </android.support.v7.widget.CardView>
