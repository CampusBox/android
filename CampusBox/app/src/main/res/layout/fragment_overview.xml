<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
          <android.support.v7.widget.CardView
              android:id="@+id/details"
              android:layout_marginTop="8dp"
              android:layout_marginStart="8dp"
              android:layout_marginEnd="8dp"
              app:cardElevation="3dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <LinearLayout

                  android:layout_marginTop="16dp"
                  android:layout_marginStart="16dp"
                  android:layout_marginBottom="16dp"
                  android:layout_marginEnd="16dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                  <ImageView
                      android:id="@+id/profilepic"
                      android:src="@mipmap/ic_launcher"
                      android:layout_width="120dp"
                      android:layout_height="120dp"
                      />
                  <LinearLayout
                      android:layout_marginStart="32dp"
                      android:layout_gravity="center"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">
                      <TextView
                          android:id="@+id/name"
                          tools:text="Name"
                          android:textSize="16sp"
                          android:textStyle="bold"
                          android:layout_marginStart="16dp"
                          android:layout_marginBottom="8dp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content" />
                      <TextView
                          android:id="@+id/college"
                          tools:text="Hello"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:drawableStart="@drawable/ic_school_grey600_18dp"/>

                  </LinearLayout>

              </LinearLayout>
          </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/about"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardElevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:weightSum="2"
                     android:layout_height="wrap_content">
                     <TextView

                         android:text="About"
                         android:layout_weight="1.7"
                         android:textSize="24sp"
                         android:textStyle="bold"
                         android:layout_marginStart="16dp"
                         android:layout_marginBottom="8dp"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content" />
                     <ImageView
                         android:layout_weight="0.3"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:src="@drawable/ic_pencil_grey600_18dp"
                         android:layout_gravity="end"/>

                 </LinearLayout>

                    <TextView
                        android:id="@+id/about_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        tools:text="Apparently, this user prefers to keep an air of mystery about them" />

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/skills"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardElevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:layout_height="wrap_content">
                        <TextView

                            android:text="Skills"
                            android:layout_weight="1.7"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_weight="0.3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_pencil_grey600_18dp"
                            android:layout_gravity="end"/>

                    </LinearLayout><TextView
                            android:layout_marginTop="8dp"
                            android:id="@+id/skill"
                            tools:text="Hello"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/Social"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:cardElevation="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                        <TextView

                            android:text="Social Accounts"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:layout_marginStart="16dp"
                            android:layout_marginBottom="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:padding="8dp"
                        android:background="@drawable/background_border"
                        android:contentDescription="faceboo_button"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_facebook_grey600_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:padding="8dp"
                        android:background="@drawable/background_border"
                        android:contentDescription="google_button"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_google_grey600_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>





        </LinearLayout>





</LinearLayout>