<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:id="@+id/eventCard"
        android:elevation="20dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">
        <ImageView
            android:contentDescription="Logo/Poster"
            android:id="@+id/event_image"
            android:layout_weight="1.3"
            android:background="@color/imageBackgroundEvent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_weight="2.7"
            android:layout_width="0dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="8dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:textStyle="bold"
                android:textSize="20sp"
                tools:text="date" />

            <TextView
                android:id="@+id/event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginStart="32dp"
                android:textSize="32sp"
                tools:text="Event Name" />

            <TextView
                android:id="@+id/event_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/event_name"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:textStyle="bold"
                android:layout_marginStart= "32dp"
                android:lineSpacingExtra="5dp"
                android:textSize="14sp"

                tools:text="ClashHacks is one of the biggest student-run hackathon, covering both software and hardware." />
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 tools:text="Venue"
                 android:gravity="center"
                 android:id="@+id/venue"
                 android:textSize="16sp"

                 android:layout_below="@+id/event_desc"
                 android:layout_marginLeft="32dp"
                 android:layout_marginTop="16dp"/>
            <View
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/venue"
                android:background="#ececec"/>
            <LinearLayout
                android:id="@+id/Appreciated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/venue"
                android:paddingBottom="8dp"
                android:paddingStart="32dp"
                android:paddingTop="16dp">

                <ImageView
                    android:id="@+id/Appreciated_image"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/heart" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:textColor="#ff007e"
                    android:text="Appreciated" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Attending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/venue"
                android:layout_toEndOf="@+id/Appreciated"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingTop="16dp">

                <ImageView
                    android:id="@+id/Attending_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/facebook" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="8dp"
                    android:text="Attending" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

 </android.support.v7.widget.CardView>
</FrameLayout>
